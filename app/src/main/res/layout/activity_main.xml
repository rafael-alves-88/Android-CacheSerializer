<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rafael.alves.cacheserializer.view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/distance_normal">

        <EditText
            android:id="@+id/etField1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_field_1" />

        <EditText
            android:id="@+id/etField2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_normal"
            android:hint="@string/hint_field_2" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_normal"
            android:text="@string/save" />

        <Button
            android:id="@+id/btnLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_normal"
            android:text="@string/load" />

    </LinearLayout>

    <include layout="@layout/loading_dialog" />

</RelativeLayout>